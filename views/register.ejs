<%- include('./partials/header.ejs') %>

<div class="container col-sm-8 col-md-4 col-lg-3" id="register-form">

    <h1 class="text-center font-weight-bold">Create Account</h1>
    <h5 class="text-center font-weight-light">Get started with your free account</h5>

    <form class="mt-3" action="/register" method="POST">
        <div class="form-group">
            <label class="font-weight-bold" for="firstName">First name</label>
            <input type="text" class="form-control form-control-lg" id="firstName" name="firstName" required>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="email">Email address</label>
            <input type="email" class="form-control form-control-lg" id="email" aria-describedby="emailHelp" name="email" required>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="username">Username</label>
            <input type="text" class="form-control form-control-lg" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="password">Create password</label>
            <input type="password" id="password" class="form-control form-control-lg" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>

    <p class="text-center mt-3">Already have an account? <a href="/login">Sign in</a></p>
</div>

<main class="main">
    <div class="css-card-light" id="css-card-1"></div>
    <div class="css-card-light" id="css-card-2"></div>
    <div class="css-card-light" id="css-card-3"></div>
    <div class="css-card-light" id="css-card-4"></div>
    <div class="css-card-light" id="css-card-5"></div>
</main>



<%- include('./partials/footer.ejs') %>