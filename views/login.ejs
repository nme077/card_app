<%- include('./partials/header.ejs') %>

<div class="container col-sm-8 col-md-4 col-lg-3" id="login-form">

    <h1 class="text-center font-weight-bold">Welcome back!</h1>
    <h5 class="text-center font-weight-normal subheading mb-3">Create a simple card as a guest or login to upload your own photos and save your work!</h5>

    <div class="text-center">
        <a class="btn btn-secondary btn-block" href="/cards/guest/new" role="button">Create a card as a guest</a>
    </div>

    <div class="separator">or</div>

    <div class="text-center">
        <a class="btn btn-secondary btn-block" id="my-sig" href="/auth/google">
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" viewBox="0 0 48 48" class="abcRioButtonSvg"><g><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path><path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path><path fill="none" d="M0 0h48v48H0z"></path></g></svg>
            Sign in with Google
        </a>
    </div>

    <div class="separator">or</div>

    <form class="mt-3" action="/login" method="POST">
        <div class="form-group">
            <label class="font-weight-bold" for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control">
        </div>
        <div class="text-center w-100">
            <button type="submit" class="btn btn-secondary btn-block submit-btn">Sign in</button>
        </div>
    </form>

    <div class="text-center m-2 mt-3">
        <a href="/forgot" id="forgot">Forgot password?</a>
    </div>

    <p class="text-center mt-3">Need an account? <a href="/register">Register here</a></p>
</div>

<main class="main">
    <div class="css-card-light" id="css-card-1"></div>
    <div class="css-card-light" id="css-card-2"></div>
    <div class="css-card-light" id="css-card-3"></div>
    <div class="css-card-light" id="css-card-4"></div>
    <div class="css-card-light" id="css-card-5"></div>
</main>



